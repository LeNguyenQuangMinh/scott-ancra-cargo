{
  "components/themevale/newsletter": "<div id=\"themevale_newsletter\" class=\"hide\">\r\n    <div class=\"popup-overlay\"></div>\r\n    <div class=\"newsletterPopup\">\r\n        <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\" data-close-newsletter-popup>\r\n            <span aria-hidden=\"true\">&#215;</span>\r\n        </a>\r\n        {{#if theme_settings.newsletterPopup-img}}\r\n            <div class=\"newsletter-image\">\r\n                <img src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.newsletterPopup-img}}\" alt=\"{{theme_settings.newsletterPopup-img}}\">\r\n            </div>\r\n        {{/if}}\r\n        <div class=\"newsletter-content{{#if theme_settings.newsletterPopup-img '==' false}} noImage{{/if}}\">\r\n            {{#if theme_settings.newsletterPopup-title}}\r\n                <h2 class=\"newsletter-heading\">{{theme_settings.newsletterPopup-title}}</h2>\r\n            {{/if}}\r\n            {{#or theme_settings.newsletterPopup-desc-1 theme_settings.newsletterPopup-desc-2}}\r\n                <p class=\"newsletter-sub-heading\">{{theme_settings.newsletterPopup-desc-1}} <br> {{theme_settings.newsletterPopup-desc-2}}</p>\r\n            {{/or}}\r\n            <div id=\"popupSubcribeForm\">\r\n                <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\" id=\"popupSubcribeFormSubmit\">\r\n                    <fieldset class=\"form-fieldset\">\r\n                        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\r\n                        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\r\n                        <input type=\"hidden\" name=\"check\" value=\"1\">\r\n                        <div class=\"form-field\">\r\n                            <div class=\"form-wrap\">\r\n                                <input class=\"form-input\" id=\"nl_email2\" name=\"nl_email\" type=\"email\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\r\n                                <input class=\"button button--border\" type=\"submit\" value=\"{{lang 'newsletter.subscribe_submit_2'}}\">\r\n                            </div>\r\n                        </div>\r\n                    </fieldset>\r\n                </form>\r\n            </div>\r\n            <div class=\"newsletter-icons\">\r\n                {{#or social_media theme_settings.social_icon_google_plus_link theme_settings.social_icon_snapchat_link}}\r\n                    <ul class=\"socialLinks style-2 socialLinks--alt\">\r\n                        {{#if social_media}}\r\n                            {{#each social_media}}\r\n                                <li class=\"socialLinks-item\">\r\n                                    {{#if display_name '===' 'google+'}}\r\n                                        <a class=\"icon icon--google\" href=\"{{url}}\" target=\"_blank\" rel=\"noopener\">\r\n                                            <svg><use xlink:href=\"#icon-google\" /></svg>\r\n                                        </a>\r\n                                    {{else}}\r\n                                        <a class=\"icon icon--{{display_name}}\" href=\"{{url}}\" target=\"_blank\" rel=\"noopener\">\r\n                                            <svg><use xlink:href=\"#icon-{{display_name}}\" /></svg>\r\n                                        </a>\r\n                                    {{/if}}\r\n                                </li>\r\n                            {{/each}}\r\n                        {{/if}}\r\n                        {{#if theme_settings.social_icon_google_plus_link '!=' ''}}\r\n                            <li class=\"socialLinks-item google-plus\">\r\n                                <a class=\"icon icon--google-plus\" href=\"{{theme_settings.social_icon_google_plus_link}}\" target=\"_blank\" rel=\"noopener\" aria-label=\"Open Google Plus Social Media in a new tab\">\r\n                                    <svg aria-hidden=\"true\"><use xlink:href=\"#icon-google-plus\" /></svg>\r\n                                </a>\r\n                            </li>\r\n                        {{/if}}\r\n\r\n                        {{#if theme_settings.social_icon_snapchat_link '!=' ''}}\r\n                            <li class=\"socialLinks-item snapchat\">\r\n                                <a class=\"icon icon--snapchat\" href=\"{{theme_settings.social_icon_snapchat_link}}\" target=\"_blank\" rel=\"noopener\" aria-label=\"Open Snapchat Social Media in a new tab\">\r\n                                    <svg aria-hidden=\"true\"><use xlink:href=\"#icon-snapchat-ghost\" /></svg>\r\n                                </a>\r\n                            </li>\r\n                        {{/if}}\r\n                    </ul>\r\n                {{/or}}\r\n            </div>\r\n            <div class=\"newsletter-show-again\">\r\n                <form>\r\n                    <input id=\"do-not-show-again\" class=\"do-not-show-again\" type=\"checkbox\" name=\"don't show again\" value=\"1\"> \r\n                    <label for=\"do-not-show-again\">No, thanks</label>\r\n                </form>\r\n            </div>\r\n        </div>\r\n        \r\n    </div>\r\n</div>\r\n"
}